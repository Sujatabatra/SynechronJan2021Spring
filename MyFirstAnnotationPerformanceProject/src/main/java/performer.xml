<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- All the configuration is with the annotations -->
	<context:annotation-config></context:annotation-config>
	
	<!-- Path of all the beans whose life cycle spring container is supposed to perform -->
	<context:component-scan base-package="com.sujata.producer"></context:component-scan>
	
</beans>
